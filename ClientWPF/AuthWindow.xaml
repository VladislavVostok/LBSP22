<Window x:Class="ClientWPF.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientWPF"
        mc:Ignorable="d"
        Title="Авторизация" Height="200" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox x:Name="UsernameBox"  Margin="0,0,0,10" Width="150" />
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10" />
            <Button Content="Войти" Click="LoginButton_Click" />
        </StackPanel>
    </Grid>
</Window>
